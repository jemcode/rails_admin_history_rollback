%table#version.table.table-striped{:data => { :title => "#{@abstract_model} version ##{@version.index + 1} <small>[#{@version.event}]</small>", :rollbackurl => url_for(action: action(:history_index, @abstract_model).action_name, model_name: @abstract_model.to_param, version_id: @version.id), rollback: t("admin.history_rollback.table_headers.rollback"), cancel: t("admin.history_rollback.cancel"), confirm: t("admin.history_rollback.confirm")}}
  %thead
    %tr
      %th= "#{t('admin.history_rollback.table_headers.field')}"
      %th{:colspan => 3}= "#{t('admin.history_rollback.table_headers.changes')}"
  %tbody
    - @version.changeset.sort.each do |changes|
      %tr
        %td= changes[0]
        %td.original.hide= changes[1][0]
        %td.changed.hide= changes[1][1]
        %td.diff
